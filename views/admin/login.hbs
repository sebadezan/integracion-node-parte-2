<div class="container" style="margin:100px auto;">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="usuario" class="col-sm-2 col-form-label">Usuario</label>
                    <input type="text" class="form-control-plaintext" id="usuario" name="usuario">
                </div>



                <div class="form-group">
                    <label for="contraseña" class="col-form-label">Contraseña</label>
                    <input type="password" id="contraseña" class="form-control" aria-describedby="passwordHelpInline"
                        name="contraseña">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>

            {{#if error}}
            <p>Usuario o contraseña incorrectos!</p>
            {{/if}}
        </div>
    </div>
</div>